<% layout('layouts/boilerplate') %>
<h1>CampGrounds</h1>

<a href="/campgrounds/new">Add New Campground</a>
<% for (let campground of campgrounds){ %>
<ul>
  <li>
    <a href="/campgrounds/<%=campground._id%>"><%=campground.title%></a>
  </li>
  <li>Location: <%= campground.location %></li>
</ul>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><a href="/campgrounds/<%=campground._id%>"><%=campground.title%></a></h5>
    <h6 class="card-subtitle mb-2 text-muted">Location<%= campground.location %></h6>
    <p class="card-text"><%= campground.description %></p>
    <a href="/campgrounds/<%=campground._id%>" class="card-link">Open Card</a>
   
  </div>
</div>
<% } %>
