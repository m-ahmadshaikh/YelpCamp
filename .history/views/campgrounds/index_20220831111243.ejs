<% layout('layouts/boilerplate') %>
<h1>CampGrounds</h1>

<a href="/campgrounds/new">Add New Campground</a>
<% for (let campground of campgrounds){ %>

<div class="card mt-3 mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= campground.image %>" class="img-fluid" alt="card-img-top" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=campground.title%></h5>
        <p class="card-text">Description: <%= campground.description %></p>
        <p class="card-text">Location: <%= campground.location %></p>
        <button class="btn-primary">
          <a href="/campgrounds/<%=campground._id%>" class="card-link"
            >Open Card</a
          >
        </button>
      </div>
    </div>
  </div>
</div>
<% } %>
