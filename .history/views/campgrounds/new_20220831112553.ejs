<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campgroud</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/new" method="post">
      <ul class="flex-outer">
        <li class="row mb-3">
          <label class="col-sm-2 col-form-label" for="title">Title</label>
       <div class="col-sm-10">   <input type="text" id="title" name="title" required /> 
        </li>

        <li>
          <label class="col-sm-2 col-form-label" for="price">Price</label>
      <div class="col-sm-10">    <input type="Number" id="price" name="price" required />
        </li>

        <li>
          <label class="col-sm-2 col-form-label" for="description"
            >Description</label
          >
      <div class="col-sm-10">    <input type="text" id="description" name="description" required />
        </li>

        <li>
          <label class="col-sm-2 col-form-label" for="location">Location</label>
      <div class="col-sm-10">    <input type="text" id="location" name="location" required />
        </li>
        <li>
          <button>Create Product</button>
        </li>
      </ul>
    </form>
  </div>
</div>
