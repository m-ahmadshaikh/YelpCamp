<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campgroud</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/new" method="post">
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="title">Title</label>
        <div class="col-sm-10">
          <input type="text" id="title" name="title" required />
        </div>
      </div>

      <div>
        <label class="col-sm-2 col-form-label" for="price">Price</label>
        <div class="col-sm-10">
          <input type="Number" id="price" name="price" required />
        </div>
      </div>

      <div>
        <label class="col-sm-2 col-form-label" for="description"
          >Description</label
        >
        <div class="col-sm-10">
          <input type="text" id="description" name="description" required />
        </div>
      </div>

      <div>
        <label class="col-sm-2 col-form-label" for="location">Location</label>
        <div class="col-sm-10">
          <input type="text" id="location" name="location" required />
        </div>
      </div>
      <div>
        <butto type="submit" class="btn btn-primary">Create Product</butto>
      </div>
    </form>
 
</div>
