<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campgroud</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/new"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <input
          class="form-control"
          type="number"
          id="price"
          name="campground[price]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <input
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Create Product</button>
      </div>
    </form>

    <div class="mb-3">
      <h3>Review</h3>
      <form action="/campgrounds//reviews" method="post">
        <div class="mb-3"></div>
        <label for="rating" class="form-label">Rating</label>
        <input
          class="form-range"
          type="range"
          name="rating"
          id="rating"
          min="0"
          max="5"
        />
        <div class="mb-3">
          <label for="body" class="form-label">Add Review</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
          ></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
