<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Your Campground</h1>
  <div class="col-md-6 offset-3">
    <div class="card mb-5">
      <img
        class="card-img-top"
        src="<%=campground.image%>"
        alt="Card image capdssdsd sdsds dsd sd sd s ds "
      />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location %></li>
        <li class="list-group-item">$<%= campground.price %>/night</li>
      </ul>
      <div class="card-body">
        <a class="btn btn-info" href="/campgrounds/<%=campground._id%>/update"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%=campground._id%>/delete?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
        <a class="btn btn-primary" href="/campgrounds"> All Campgrounds</a>
      </div>
    </div>
  </div>
  div.col-md
</div>
