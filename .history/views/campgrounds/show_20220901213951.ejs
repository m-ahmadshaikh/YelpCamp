<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Your Campground</h1>
  <div class="col-md-6">
    <div class="card mb-5">
      <img
        class="card-img-top"
        src="<%=campground.image%>"
        alt="Card image capdssdsd sdsds dsd sd sd s ds "
      />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location %></li>
        <li class="list-group-item">$<%= campground.price %>/night</li>
      </ul>
      <div class="card-body">
        <a class="btn btn-info" href="/campgrounds/<%=campground._id%>/update"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%=campground._id%>/delete?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
        <a class="btn btn-primary" href="/campgrounds"> All Campgrounds</a>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="mb-3">
      <h3>Leave a Review</h3>
      <form
        class="needs-validation"
        action="/campgrounds/<%=campground._id %>/reviews"
        method="post"
        novalidate
      >
        <div class="mb-3"></div>
        <label for="rating" class="form-label">Rating</label>
        <input
          class="form-range"
          type="range"
          name="review[rating]"
          id="rating"
          min="1"
          max="5"
        />
        <div class="mb-3">
          <label for="body" class="form-label">Add Review</label>
          <textarea
            class="form-control"
            required
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
          ></textarea>

          <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-primary">Submit</button>
      </form>
    </div>
    <% if (campground.reviews.length) { %> <% for( let review of
    campground.reviews ) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Review: <%=review.body %></h5>
        <p class="card-text">Rating: <%=review.rating %>/5</p>
        <form action=""></form>
        <% } %> <% } %>
      </div>
    </div>
  </div>
</div>
