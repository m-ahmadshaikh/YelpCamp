<% layout('layouts/boilerplate') %>
    <form
      action="/campgrounds/<%=campground._id%>/update?_method=PATCH"
      method="post"
    >
      <ul class="flex-outer">
        <li>
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            value="<%=campground.title%>"
            name="title"
            required
          />
        </li>

        <li>
          <label for="price">Price</label>
          <input
            type="Number"
            id="price"
            value="<%=campground.price%>"
            name="price"
            required
          />
        </li>

        <li>
          <label for="description">Description</label>
          <input
            type="text"
            id="description"
            value="<%=campground.description%>"
            name="description"
            required
          />
        </li>

        <li>
          <label for="location">Location</label>
          <input
            type="text"
            id="location"
            value="<%=campground.location%>"
            name="location"
            required
          />
        </li>
        <li>
          <button>Update Campground</button>
        </li>
      </ul>
    </form>
  </body>
</html>
