<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit this Campground</h1>
  <div class="col-md-6 offset-3">
    <form
      action="/campgrounds/<%=campground._id%>/update?_method=PATCH"
      method="post"
    >
      <div class="mb-3">
        <label for="title">Title</label>
        <input
          type="text"
          id="title"
          value="<%=campground.title%>"
          name="title"
          required
        />
      </div>

      <div class="mb-3">
        <label for="price">Price</label>
        <input
          type="Number"
          id="price"
          value="<%=campground.price%>"
          name="price"
          required
        />
      </div>

      <div class="mb-3">
        <label for="description">Description</label>
        <input
          type="text"
          id="description"
          value="<%=campground.description%>"
          name="description"
          required
        />
      </div>

      <div class="mb-3">
        <label for="location">Location</label>
        <input
          type="text"
          id="location"
          value="<%=campground.location%>"
          name="location"
          required
        />
      </div>
      <div>
        <button>Update Campground</button>
      </div>
    </form>
  </div>
</div>
