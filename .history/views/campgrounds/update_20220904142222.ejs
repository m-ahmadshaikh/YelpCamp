<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-md-6 offset-3">
    <h1 class="text-center">Edit this Campground</h1>
    <form
      action="/campgrounds/<%=campground._id%>/update?_method=PATCH"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          value="<%=campground.title%>"
          name="campground[title]"
          required
        />

        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <input
          class="form-control"
          type="Number"
          id="price"
          value="<%=campground.price%>"
          name="campground[price]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <input
          class="form-control"
          type="text"
          id="description"
          value="<%=campground.description%>"
          name="campground[description]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          value="<%=campground.location%>"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Images</label>
        <div class="custom-file">
          <input
            type="file"
            class="custom-file-input"
            id="customFile"
            name="images"
            multiple
          />
          <label class="custom-file-label" for="customFile"
            >Add more image(s)</label
          >
        </div>
      </div>
      <div class="form-check mb-3">
        <% campground.images.forEach((img,i) => { %>
        <img
          class="img-thumbnail"
          src="<%=img.url%> "
          alt="Image to display here"
        />
        <input
          class="form-check-input-inline"
          type="checkbox"
          name="img"
          value=""
          id="image-<%=i%> "
        />
        <label class="form-check-label-inline" for="flexCheckDefault">
          Default checkbox
        </label>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Campground</button>
      </div>
      <a href="/campgrounds" class="btn btn-link"> Back to Campgrounds</a>
    </form>
  </div>
</div>
